<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Titillium+Web:wght@300&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-CuOF+2SnTUfTwSZjCXf01h7uYhfOBuxIhGKPbfEJ3+FqH/s6cIFN9bGr1HmAg4fQ" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="stylesheets/index.css">
    <title>Twitterpator</title>
</head>
<body>
    <div class="container mt-5">
        <!-- <div class="container"> -->
            <div class="row">
                <div class="col-sm-5"></div>
                <div class="col-sm-6">
                    <div id="data-pack" class="container">
                        <div class="row">
                            <% for(let retweet of top10retweets){ %>
                                <div class="col-sm">n<div class="data" style="height: 100px"></div></div>
                            <% } %>
                            <!-- <div class="col-sm">2<div class="data"></div></div>
                            <div class="col-sm">3<div class="data"></div></div>
                            <div class="col-sm">4<div class="data"></div></div>
                            <div class="col-sm">5<div class="data"></div></div>
                            <div class="col-sm">6<div class="data"></div></div>
                            <div class="col-sm">7<div class="data"></div></div>
                            <div class="col-sm">8<div class="data"></div></div>
                            <div class="col-sm">9<div class="data"></div></div>
                            <div class="col-sm">0<div class="data"></div></div> -->
                        </div>
                    </div>
                    <div class="col-sm-1"></div>
                </div>
            </div>
 
        <!-- </div> -->
 
        <h2 class="hi-elliot">Hi_ellioT</h2>
        <div class="row">
            <div class="col-10 offset-1">
                <form action="/lookat" method="GET">
                    <div>
                        <div id="phrase-row" class="row mb-2">
                            <% if(currentparams.phrases.length===0){ %>
                                <% currentparams.phrases[0]=''; %>
                            <% } %>
                            <% for(let i=0; i<currentparams.phrases.length; i++){ %>
                                <% let j=i+1 %>
                                <div class="param-input col-3 mt-1">
                                    <input type="text" class="form-control form-control-sm" name="phrases[<%=i%>]" id="phrases[<%=i%>]" value="<%=currentparams.phrases[i]%>" placeholder="phrase[<%=j%>]">
                                </div>
                            <% } %>
                            <div class="button-holder col-2 mt-1"><button type="button" id="add-phrase" class="btn btn-sm">+1</button></div>
                        </div>
                        <div class="row">
                            <div class="param-input col-3">
                                <select name="method" id="method" class="form-select form-select-sm mb-3">
                                    <option>method</option>
                                    <option <% if(currentparams.method==='stream'){ %>selected <% } %> value="stream">stream</option>
                                    <option <% if(currentparams.method==='restful'){ %>selected <% } %> value="restful">restful</option>
                                  </select>
                            </div>
                            <div class="param-input col-3">
                                <input type="text" class="form-control form-control-sm" name="count" id="count" placeholder="count" value="<%= currentparams.count %>">
                            </div>
                            <div class="param-input col-3">
                                <select name="language" id="language" class="form-select form-select-sm mb-3">
                                    <option>language</option>
                                    <option <% if(currentparams.language==='en'){ %>selected <% } %> value="en">EN</option>
                                    <option <% if(currentparams.language==='ja'){ %>selected <% } %> value="ja">JA</option>
                                    <option <% if(currentparams.language==='sp'){ %>selected <% } %> value="sp">SP</option>
                                </select>
                            </div>
                            <div class="param-input col-3">
                                <select name="location" id="location" class="form-select form-select-sm mb-3">
                                    <option>location</option>
                                    <option <% if(currentparams.location==='earth'){ %>selected <% } %> value="earth">Earth</option>
                                    <option <% if(currentparams.location==='sanFrancisco'){ %>selected <% } %> value="sanFrancisco">San Francisco</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <button type="submit" class="btn btn-sm mb-3">Submit</button>
                    </div>
                </form>
            </div>
        </div>
        <div>
            <h3>actively retrieved</h3>

            <ul class="recents">
            </ul>
            <img class="putin" src="https://i.gifer.com/ZAc2.gif" alt=""> 
        </div>
    </div>
 
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="javascripts/home.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>
</body>
</html>